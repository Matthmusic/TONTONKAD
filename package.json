{
  "name": "tontonkad",
  "version": "2.1.0",
  "description": "TONTONKAD - Dimensionnement de chemins de c√¢bles et fourreaux",
  "main": "src/main/main.js",
  "author": "TONTONKAD Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "release": "electron-builder --publish always"
  },
  "keywords": [
    "electrical",
    "engineering",
    "cables",
    "conduits",
    "design",
    "CAD"
  ],
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.3.10"
  },
  "build": {
    "appId": "com.tontonkad.app",
    "productName": "TONTONKAD",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "data/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TONTONKAD"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/ico/icon.icns",
      "category": "public.app-category.productivity",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons/ico",
      "category": "Engineering",
      "publish": [
        "github"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "Matthmusic",
      "repo": "TONTONKAD"
    }
  }
}
